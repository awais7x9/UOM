<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing_setting_container']/div[3]" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" title="Refund Period">
                    <div class="o_setting_right_pane">
                        <label for="return_period"/>
                        <div class="content-group mt16">
                            <field name="return_period"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
